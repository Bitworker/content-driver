- news  = 'www.n-tv.de, www.heute.de, www.bild.de, www.handelsblatt.com, www.stern.de, www.welt.de, www.spiegel.de'
- other = 'www.stern.de, www.bild.de'

.search-header
  %h1
    cd ..
    %strong
      Your content-driver
  %h1.sub
    %strong
      Live crawling at his best!

.search
  = form_tag(result_path, method: "get") do
    %input{ :name => "sites", :class => "sitesfield", :id => "sites" }
    .recommended-sites
      = link_to 'Nachrichten', search_path(:sites => news)
      |
      = link_to 'später..', search_path(:sites => other)
      |
      = link_to 'später..', search_path
      |
      = link_to 'später..', search_path
    
    = submit_tag "Suche", :class => "search-button"

- if params[:sites]
  :javascript
    $('#sites').importTags("#{ params[:sites] }");
